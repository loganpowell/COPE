{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "watch": true
  },
  "exclude": ["**/*.spec.js", "**/*.test.js", "node_modules", "lib"]
}

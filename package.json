{
    "name": "COPE",
    "author": "Logan Powell",
    "license": "MIT",
    "version": "0.0.1",
    "description": "Create Once Publish Everywhere",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "repository": "https://github.com/loganpowell/COPE",
    "homepage": "https://github.com/loganpowell/COPE",
    "scripts": {
        "clean": "rm -rf ./lib & rm -rf ./dist &  rm -rf .cache",
        "madge": "madge --circular lib/",
        "typewatch": "tsc --project tsconfig.json",
        "types": "tsc --project tsconfig.build.json",
        "mock": "amplify mock",
        "jest": "jest --watchAll",
        "delay": "node ./node_modules/npm-delay 60000",
        "test": "npm run madge && concurrently \"amplify mock\" \"npm run delay && npm run typewatch\" \"npm run delay && npm run jest\"",
        "git": "npm run ncu && git add . && git commit -m",
        "build": "npm run clean && cross-env NODE_ENV=production parcel build client/index.html -d dist --no-source-maps --no-cache --public-url ./",
        "dev": "concurrently \"npm run typewatch\" \"parcel client/index.html --global md -p 8080 --open -d dist watch\""
    },
    "keywords": [],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@thi.ng/associative": "^5.2.2",
        "@thi.ng/checks": "^2.9.6",
        "json-to-graphql-query": "^2.0.0",
        "nanographql": "^2.0.0",
        "node-fetch": "^2.6.1"
    },
    "peerDependencies": {},
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.13.8",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "babel-jest": "^26.6.3",
        "cross-env": "^7.0.3",
        "dotenv": "^8.2.0",
        "dummy-text-generator": "^1.0.3",
        "eslint": "^7.23.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "jest-environment-jsdom": "^26.6.2",
        "jsdom": "^16.5.2",
        "npm-delay": "^1.0.4",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "uuid": "^8.3.2"
    },
    "browserslist": [
        "last 3 Chrome versions"
    ],
    "prettier": {
        "singleQuote": false,
        "printWidth": 120,
        "endOfLine": "lf",
        "tabWidth": 4,
        "semi": false,
        "arrowParens": "avoid"
    }
}
